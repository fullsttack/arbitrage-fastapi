# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-generate-a-strong-one
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/crypto_arbitrage
DB_NAME=crypto_arbitrage
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Exchange API Keys - Nobitex
NOBITEX_API_KEY=your-nobitex-api-key
NOBITEX_API_URL=https://api.nobitex.ir

# Exchange API Keys - Wallex
WALLEX_API_KEY=your-wallex-api-key
WALLEX_API_URL=https://api.wallex.ir

# Exchange API Keys - Ramzinex
RAMZINEX_API_KEY=your-ramzinex-api-key
RAMZINEX_SECRET_KEY=your-ramzinex-secret-key
RAMZINEX_API_URL=https://publicapi.ramzinex.com

# Trading Settings
AUTO_TRADE_ENABLED=False
MIN_ARBITRAGE_THRESHOLD=0.5
MAX_TRADE_AMOUNT_USDT=100
MAX_TRADE_AMOUNT_RLS=10000000

# Rate Limits (requests per minute)
NOBITEX_RATE_LIMIT=300
WALLEX_RATE_LIMIT=60
RAMZINEX_RATE_LIMIT=60

# Monitoring
ENABLE_MONITORING=True
ALERT_EMAIL=admin@example.com
ALERT_THRESHOLD=2.0

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/crypto_arbitrage.log

# Scheduler
PRICE_UPDATE_INTERVAL=5
ARBITRAGE_CHECK_INTERVAL=10